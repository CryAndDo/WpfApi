<Window x:Class="WpfApp2.TariffsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="TariffsWindow" Height="450" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Label Content="Введите название специальности"/>
            <TextBox x:Name="Speciality_name" Height="40" Margin="20 10"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Label Content="Введите цену"/>
            <TextBox x:Name="Price" Height="40" Margin="20 10"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="SaveTariffs" Content="Сохранить" Grid.Row="3" Margin="30 5" Click="SaveTariffs_Click"/>
            <Button x:Name="CancelTariffs" Content="Отменить" Grid.Row="3" Margin="30 5" Click="CancelTariffs_Click"/>
        </StackPanel>
    </Grid>
</Window>
